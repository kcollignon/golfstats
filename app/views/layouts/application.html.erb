<!DOCTYPE html>
<html>
<head>
  <title>Golfstats</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<!-- top lines for style -->
	<div id="top_green"></div>
	<div id="top_dark"></div>
	
	<div id="wrapper">
		
		<div id="header">
			<!-- logo - editable via logo.png -->
			<div id="logo"></div>
			<div id="user_links">
				Logged in as
				<a href="#">Admin</a>&nbsp;|
				<a href="#">View Website</a>&nbsp;|
				<a href="#">Logout</a>
			</div>
		</div>
		
		<!-- edit navigation items here -->
		<div id="nav">
			<ul>
				<li><%= link_to 'Rounds', rounds_path %></li>
				<li><%= link_to 'Courses', courses_path %></li>
				<li><a href="#">Manage Users</a></li>
				<li><a href="#">Manage Site</a></li>
			</ul>
		</div>
		
		<div id="content">
		
			
			<div id="left">
				
				<!-- begin all content here -->
			<%= yield %>
				
				
			</div>
			
			<!-- edit sidebar items here -->
		
		</div>
		
		<div id="footer">
			<!-- edit footer items here -->
			<div id="copyright">Copyright &copy; 2011 UNC Bears</div>
			<div id="footer_links">
				Go back to <a href="#">Dashboard</a>&nbsp;|
				<a href="#">Help</a>&nbsp;|
				<a href="#">Logout</a>
			</div>
		</div>
		
	</div>

</body>
</html>
